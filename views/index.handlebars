<main class="container">
        <div class="row">
            <div class="col s12 eatTitle">
                <h1 class="center" >
                    Eat Da Burger!
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m4"></div>
            <div class="col s12 m4">
                <img src="/assets/img/burger.jpg" class="responsive-img"/>
            </div>
            <div class="col s12 m4"></div>
        </div>

        <div class="row">
            <div class="col s12 m6 center">
                <h4>Burgers ready to eat!</h4>
                <hr>
                <ul>
                    {{#each burgers}} {{#if devoured}} {{> burgers/burger-block
                    devoured=false}} {{/if}} {{/each}} 
                </ul>

                
            </div>
            <div class="col s12 m6 center">
                <h4>List of the Devoured</h4>
                <hr>
                <ul>
                    {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block
                        devoured=true}} {{/unless}} {{/each}}
                </ul>
                <ul>

                  </ul>
            </div>
        </div>

        <div class="row">
            <div class="col s2"></div>
            <div class="col s8 addBurger">
                <h3 class="center" >
                    Add a Burger!
                </h3>
                        
                <form class="create-form">
                   
                    <div class="form-group">
                      <label for="burger">
                          <span class="yellowText">
                              Burger Name:
                          </span>
                      </label>
                      <input type="text" id="burger" name="name" />
                    </div>

                    <div class="form-group">
                        <label>
                            <span class="yellowText">
                           Has this burger been eaten?
                            </span>
                        </label>
                        <br />
                        <p>
                            <label>
                            <input name="group1" type="radio" value="1" checked />
                            <span class="yellowText">Not yet...(but I'm hungry)</span>
                            </label>
                        </p>
                        <p>
                            <label>
                            <input name="group1" type="radio" value="0"/>
                            <span class="yellowText">I've DEVOURED this burger!</span>
                            </label>
                        </p>
                    </div>
                        
                    <button class="btn waves-effect waves-light" type="submit" name="action">Add Burger
                        <i class="material-icons right">send</i>
                      </button>
                </form>

            </div>
            <div class="col s2"></div>
        </div>
        <div class="row"></div>
    </main>
    <footer class="page-footer">

        <div class="footer-copyright">
          
          ©Photo by Oliver Sjöström from Pexels
          <a class="grey-text text-lighten-4 right" href="https://github.com/jeffreyadamo">GitHub @jeffreyadamo</a>

        </div>
    </footer>